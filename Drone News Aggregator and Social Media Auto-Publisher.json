    {
      "parameters": {
        "jsCode": "const articlesInput = $input.first();\nconst historyInput = $input.last();\nconst articles = articlesInput.json ? [articlesInput.json] : $input.all().filter((item, index) => index === 0).map(i => i.json);\nconst postedArticles = historyInput.json ? (Array.isArray(historyInput.json) ? historyInput.json : [historyInput.json]) : $input.all().filter((item, index) => index === 1).map(i => i.json);\nconst postedLinks = new Set(postedArticles.map(item => item['Article Link'] || item.articleLink));\nconst allArticles = Array.isArray(articles[0]) ? articles[0] : articles;\nconst unpostedArticles = allArticles.filter(article => !postedLinks.has(article.link));\nreturn unpostedArticles.map(article => ({ json: article }));"
      },
      "id": "72383dff-f9da-4904-9209-ad5bd3db7328",
      "name": "Filter Unposted Articles",
